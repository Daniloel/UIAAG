{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
{% if particle.enabled %}
  {% assets in 'head' with {priority: 0} %}
    <link rel="stylesheet" href="{{ url('gantry-theme://css/uikit.min.css') }}"/>
  {% endassets -%}

  {% scripts in 'footer' with {priority: 10} %}
    <script src="{{ url('gantry-theme://js/uikit.min.js') }}"></script>
  {% endscripts %}

  {% set rand = random() %}
  {% set acolor1 =  gantry.config.get('styles.accent.color-1') %}
  {% set acolor2 =  gantry.config.get('styles.accent.color-2') %}

  <style text="text/css">
      {% if particle.style == 0 %}
      .jl-heading-{{rand}} .jl-heading-style {
          text-align: {{particle.titlealign|default('center')}};
          margin-left: {% if particle.titlealign == 'left'%} -10px {% elseif particle.titlealign == 'center'%} auto {% elseif particle.titlealign == 'right'%} auto {% endif %};
          margin-right: {% if particle.titlealign == 'right'%} -10px {% elseif particle.titlealign == 'center'%} auto {% elseif particle.titlealign == 'left'%} auto {% endif %};
      }
      {% elseif particle.style == 1 %}
      .jl-heading-{{rand}} .jl-heading-style-1 .jl-heading-title:before {
          margin-left: {% if particle.titlealign == 'left'%} -40px {% elseif particle.titlealign == 'center'%} -15px {% elseif particle.titlealign == 'right'%} 10px{% endif %};
          left: 50%;
          width: 30px;
          position: absolute;
          content: '';
          bottom: 0px;
          height: 2px;
          background: #ddd;
      }
        {% elseif particle.style == 2 %}

      .jl-heading-{{rand}} .jl-heading-style-2 .jl-heading-title:before {
          left: 50%;
          margin-left: {% if particle.titlealign == 'left'%} -40px {% elseif particle.titlealign == 'center'%} -30px {% elseif particle.titlealign == 'right'%} -19px {% endif %};
          width: 60px;
          position: absolute;
          content: '';
          bottom: 0px;
          height: 2px;
          background: #ddd;
      }
  {% elseif particle.style == 3 %}
      .jl-heading-{{rand}} .jl-heading-style-3 .jl-heading-title:before {
          left: 50%;
          margin-left:{% if particle.titlealign == 'left'%} -40px {% elseif particle.titlealign == 'center'%} -45px {% elseif particle.titlealign == 'right'%} -49px {% endif %};
          width: 90px;
          position: absolute;
          content: '';
          bottom: 0px;
          height: 2px;
          background: #ddd;
      }
  {% elseif particle.style == 6 %}
      .jl-heading-{{rand}} .jl-heading-style-6 .jl-heading-title:before {
        top: 35px;
        left: 50%;
        margin-left: {% if particle.titlealign == 'left'%} -40px {% elseif particle.titlealign == 'center'%} -60px {% elseif particle.titlealign == 'right'%} -81px {% endif %};
        background-image: url(data:image/svg+xml;base64,);
        content: '';
        position: absolute;
        width: 122px;
        height: 12px;
        bottom: 0px;
      }
        {% elseif particle.style == 7 %}
      .jl-heading-{{rand}} .jl-heading-style-7 .jl-heading-title:before {
        left: 50%;
        margin-left: {% if particle.titlealign == 'left'%} -40px {% elseif particle.titlealign == 'center'%} -13px {% elseif particle.titlealign == 'right'%} 15px {% endif %};
        background-image: url(data:image/svg+xml;base64,);
        content: '';
        position: absolute;
        width: 27px;
        height: 6px;
        bottom: 0px;
      }
      {% elseif particle.style == 8 %}
      .jl-heading-{{rand}} .jl-heading-style-8 .jl-heading-title:before {
        top: 35px;
        left: 50%;
        margin-left: {% if particle.titlealign == 'left'%} -50px {% elseif particle.titlealign == 'center'%} -61px {% elseif particle.titlealign == 'right'%} -70px {% endif %};
        background-image: url(data:image/svg+xml;base64,);
        content: '';
        position: absolute;
        width: 122px;
        height: 12px;
        bottom: 0px;
      }
      {% endif %}

      .jl-heading-{{rand}} .jl-heading-title{
        color: {% if particle.titlecolor %} {{particle.titlecolor}} {% else %} {{acolor1}} {% endif %};
        font-size: {% if particle.titlesize %} {{particle.titlesize}}px {% else %} 18px {% endif %};

      }
      .jl-heading-{{rand}} .jl-heading-subtitle{
        margin: 0 !important;
        color: {% if particle.subtitlecolor %} {{particle.subtitlecolor}} {% else %} {{acolor1}} {% endif %};
        font-size: {% if particle.subtitlesize %} {{particle.subtitlesize}}px {% else %} 14px {% endif %};
      }

  </style>

  {% if particle.style == 0 %}
      <div class="jl-heading-{{rand}} uk-grid">
        <div class="uk-width-1-1" style="text-align:{% if particle.titlealign %} {{particle.titlealign|default('center')}}{% endif %} ">
        		<div class="jl-heading-content">
        			<div class="jl-heading-style " >
                <h3 class="jl-heading-title">{{particle.title|raw}}</h3>
              </div>
              {% if particle.subtitle %}
                <p class="jl-heading-subtitle">{{particle.subtitle|raw}}</p>
              {% endif %}
           </div>
        </div>
     </div>
  {% elseif particle.style == 1 %}
      <div class="jl-heading-{{rand}} uk-grid">
        <div class="uk-width-1-1" style="text-align:{% if particle.titlealign %} {{particle.titlealign|default('center')}}{% endif %} ">
